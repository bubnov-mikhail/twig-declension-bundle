{% extends '::base.html.twig' %}
{% form_theme form 'BubnovTwigDeclensionBundle:Form:form_row.html.twig' %}

{% block title %}{{ 'twig-declension.add-declension' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'twig-declension.add-declension' | trans }}</h1>

    {{ form_start(form) }}

        {{ form_widget(form) }}

        <div class="pull-right">
            <input type="submit" id="_submit" name="_submit" value="{{ 'twig-declension.add'| trans }}" class="btn btn-success" />
            <a href="{{ path('admin_twig_declension') }}" id="cancel" class="btn btn-default">
                {{ 'twig-declension.cancel'| trans }}
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}
